{
  "name": "globex",
  "version": "0.1.0",
  "description": "Agentic PRD generation with human-in-the-loop validation",
  "type": "module",
  "bin": {
    "globex": "./cli/bin/globex"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "bun test cli/",
    "test:unit": "bun test cli/tests/*.test.ts",
    "test:integration": "bun test cli/tests/integration/*.test.ts",
    "test:watch": "bun test --watch",
    "lint": "oxlint cli/src/",
    "lint:fix": "oxlint cli/src/ --fix",
    "check": "bun run lint && bun run build && bun test"
  },
  "dependencies": {
    "@effect/platform": "^0.94.1",
    "@effect/platform-node": "^0.104.0",
    "@opencode-ai/sdk": "^1.1.1",
    "@opentui/core": "^0.1.68",
    "@opentui/solid": "^0.1.68",
    "effect": "^3.12.0",
    "solid-js": "^1.9.0",
    "yargs": "^18.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^22.0.0",
    "@types/yargs": "^17.0.35",
    "oxlint": "^1.38.0",
    "typescript": "^5.7.0"
  }
}

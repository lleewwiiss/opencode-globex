{
  "name": "globex",
  "version": "0.1.0",
  "description": "Agentic PRD generation with human-in-the-loop validation",
  "type": "module",
  "main": "dist/index.js",
  "opencode-plugin": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "bun test",
    "test:unit": "bun test tests/*.test.ts",
    "test:integration": "bun test tests/integration/*.test.ts",
    "test:watch": "bun test --watch",
    "lint": "oxlint src/",
    "lint:fix": "oxlint src/ --fix",
    "check": "bun run lint && bun run build && bun test"
  },
  "dependencies": {
    "@effect/platform": "^0.94.1",
    "@effect/platform-node": "^0.104.0",
    "@opencode-ai/plugin": "^1.0.0",
    "effect": "^3.12.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^22.0.0",
    "oxlint": "^1.38.0",
    "typescript": "^5.7.0"
  }
}

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "dist/",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "jsxImportSource": "@opentui/solid"
  },
  "include": ["cli/**/*.ts", "cli/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}

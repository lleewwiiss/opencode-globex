{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "globex-ralph": {
      "permission": {
        "*": "allow",
        "bash": {
          "*": "allow",
          "git push*": "deny",
          "rm -rf /*": "deny"
        }
      }
    },
    "globex-wiggum": {
      "permission": {
        "edit": "deny",
        "write": "deny",
        "bash": {
          "*": "allow",
          "rm *": "deny",
          "rm -rf *": "deny",
          "git push*": "deny",
          "git reset --hard*": "deny"
        }
      }
    }
  }
}
